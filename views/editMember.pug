extends layout

block content
  h2.text-3xl.mb-10 Muuda liikme andmeid
  form(action=`/edit-member/?id=${member._id}` method="POST")
    .my-2
      label(for="name") Nimi
      input.border-b-2.ml-2(type="text" name="name" value=member.details.name)

    .my-2
      label(for="email") E-mail
      input.border-b-2.ml-2(type="email" name="email" value=member.details.email)

    .my-2
      label(for="phone") Telefon
      input.border-b-2.ml-2(type="tel" name="phone" value=member.details.phone)

    .my-2
      label(for="id-code") Isikukood
      input.border-b-2.ml-2(type="text" name="id-code" inputmode="decimal" value=member.details.idCode)

    .my-2
      label(for="student") Tudeng
      input.border-b-2.ml-2(type="checkbox" name="student" checked=member.details.student)

    .my-2
      label(for="active") Aktiivne
      input.border-b-2.ml-2(type="checkbox" name="active" checked=member.details.active)

    .my-2
      label.mr-2(for="balance") Bilanss:
      input.border-b-2.w-24(type="number" inputmode="decimal" id="balance" name="balance" step="0.01" value=member.balance)
      span â‚¬

      input.block.mt-4.p-1.rounded.bg-transparent.border.border-gray-500(type="submit" value="Salvesta")

  a(class="bg-red-500 my-4 block text-white w-20 p-1 text-center rounded hover:bg-red-400" href=`/delete-member?id=${member._id}`) Kustuta
